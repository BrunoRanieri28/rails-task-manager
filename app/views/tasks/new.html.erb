<h1>Create a new Task</h1>

<%= form_with(model: @task, local: true) do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title  %>

  <%= form.label :details %>
  <%= form.text_area :detatils %>

  <%= form.label :completed %>
  <%= form.check_box :completed %>

  <%= form.submit %>
<% end %>

<%= link_to 'Show', @task %> |
<%= link_to 'Back', tasks_path %>